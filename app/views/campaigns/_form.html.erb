<%= form_with model: campaign, class: "space-y-6" do |f| %>
  <% if campaign.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 ring-1 ring-red-200">
      <h2 class="text-sm font-medium text-red-800">
        <%= pluralize(campaign.errors.count, "error") %> prevented this campaign from being saved:
      </h2>
      <ul class="mt-2 list-disc space-y-1 pl-5 text-sm text-red-700">
        <% campaign.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title,
          required: true,
          autofocus: true,
          class: "form-input mt-2" %>
    <% if campaign.errors[:title].any? %>
      <p class="mt-1 text-sm text-red-600"><%= campaign.errors[:title].first %></p>
    <% end %>
  </div>

  <div data-controller="nested-form">
    <div class="flex items-center justify-between gap-4">
      <h2 class="text-base font-semibold text-gray-900">Recipients</h2>
      <button
        type="button"
        data-action="nested-form#add"
        class="btn btn-md btn-secondary">
        Add recipient
      </button>
    </div>

    <template data-nested-form-target="template">
      <%= f.fields_for :recipients, Recipient.new, child_index: "NEW_RECORD" do |recipient_fields| %>
        <%= render "recipient_fields", f: recipient_fields %>
      <% end %>
    </template>

    <div class="mt-5 space-y-4" data-nested-form-target="container">
      <%= f.fields_for :recipients do |recipient_fields| %>
        <%= render "recipient_fields", f: recipient_fields %>
      <% end %>
    </div>

    <% if campaign.errors[:recipients].any? %>
      <p class="mt-2 text-sm text-red-600"><%= campaign.errors[:recipients].first %></p>
    <% end %>
  </div>

  <div class="flex items-center justify-end gap-3">
    <%= f.submit campaign.persisted? ? "Save changes" : "Create Campaign",
          class: "btn btn-md btn-primary" %>
  </div>
<% end %>
