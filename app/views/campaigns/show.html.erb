<% content_for :breadcrumbs do %>
  <%= render "shared/breadcrumbs",
        items: [
          { label: "Campaigns", path: campaigns_path },
          { label: @campaign.title }
        ] %>
<% end %>

<div class="space-y-8">
  <%= turbo_stream_from @campaign %>
  <%= render "progress", campaign: @campaign %>

  <section aria-labelledby="recipients-heading">
    <div class="rounded-lg bg-white shadow-sm ring-1 ring-gray-200">
      <div class="border-b border-gray-200 px-6 py-4">
        <h2 id="recipients-heading" class="text-base font-semibold text-gray-900">Recipients</h2>
      </div>

      <% if @recipients.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Name</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Email</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Phone</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Status</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Error</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <%= render partial: "recipient_row", collection: @recipients, as: :recipient %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="px-6 py-8">
          <p class="text-sm text-gray-600">No recipients yet.</p>
        </div>
      <% end %>
    </div>
  </section>
</div>
