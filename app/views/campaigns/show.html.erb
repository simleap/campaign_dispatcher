<% total_recipients = @recipients.size %>
<% sent_recipients = @status_counts.fetch("sent", 0) %>
<% failed_recipients = @status_counts.fetch("failed", 0) %>
<% queued_recipients = @status_counts.fetch("queued", 0) %>
<% sent_percent = total_recipients.zero? ? 0 : ((sent_recipients.to_f / total_recipients) * 100).round %>

<div class="space-y-8">
  <div class="flex flex-col justify-between gap-4 sm:flex-row sm:items-start">
    <div>
      <h1 class="text-2xl font-semibold text-gray-900"><%= @campaign.title %></h1>
      <div class="mt-2 flex flex-wrap items-center gap-2">
        <%= campaign_status_badge(@campaign.status) %>

        <% if @campaign.started_at.present? %>
          <span class="text-sm text-gray-600">Started <%= l(@campaign.started_at, format: :short) %></span>
        <% end %>

        <% if @campaign.completed_at.present? %>
          <span class="text-sm text-gray-600">Completed <%= l(@campaign.completed_at, format: :short) %></span>
        <% end %>
      </div>
    </div>

    <div class="flex flex-col items-stretch gap-2 sm:items-end">
      <button
        type="button"
        disabled
        class="inline-flex items-center justify-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm disabled:cursor-not-allowed disabled:bg-indigo-300">
        Dispatch Campaign
      </button>

      <% if @campaign.processing? %>
        <span class="text-sm text-gray-600">Processing…</span>
      <% end %>
    </div>
  </div>

  <section aria-labelledby="progress-heading">
    <div class="rounded-lg bg-white p-6 shadow-sm ring-1 ring-gray-200">
      <div class="flex items-center justify-between gap-4">
        <h2 id="progress-heading" class="text-base font-semibold text-gray-900">Progress</h2>
        <p class="text-sm text-gray-700">
          Sent <span class="font-medium"><%= sent_recipients %></span> of <span class="font-medium"><%= total_recipients %></span>
        </p>
      </div>

      <div class="mt-4">
        <div class="h-2 w-full overflow-hidden rounded-full bg-gray-100">
          <div class="h-full rounded-full bg-green-500" style="width: <%= sent_percent %>%;"></div>
        </div>
        <div class="mt-3 flex flex-wrap gap-x-6 gap-y-2 text-sm text-gray-700">
          <span>Queued: <span class="font-medium"><%= queued_recipients %></span></span>
          <span>Sent: <span class="font-medium"><%= sent_recipients %></span></span>
          <span>Failed: <span class="font-medium"><%= failed_recipients %></span></span>
        </div>
      </div>
    </div>
  </section>

  <section aria-labelledby="recipients-heading">
    <div class="rounded-lg bg-white shadow-sm ring-1 ring-gray-200">
      <div class="border-b border-gray-200 px-6 py-4">
        <h2 id="recipients-heading" class="text-base font-semibold text-gray-900">Recipients</h2>
      </div>

      <% if @recipients.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Name</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Contact</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Status</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Error</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <% @recipients.each do |recipient| %>
                <tr>
                  <td class="whitespace-nowrap px-6 py-4 text-sm font-medium text-gray-900"><%= recipient.name %></td>
                  <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-700"><%= recipient.contact %></td>
                  <td class="whitespace-nowrap px-6 py-4 text-sm"><%= recipient_status_badge(recipient.status) %></td>
                  <td class="px-6 py-4 text-sm">
                    <% if recipient.failed? && recipient.error_message.present? %>
                      <span class="text-red-700"><%= recipient.error_message %></span>
                    <% else %>
                      <span class="text-gray-400">—</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="px-6 py-8">
          <p class="text-sm text-gray-600">No recipients yet.</p>
        </div>
      <% end %>
    </div>
  </section>

  <div>
    <%= link_to "Create another campaign",
          root_path,
          class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
  </div>
</div>
