<% content_for :breadcrumbs do %>
  <%= render "shared/breadcrumbs",
        items: [
          { label: "Campaigns", path: campaigns_path },
          { label: @campaign.title, path: campaign_path(@campaign) },
          { label: "Edit" }
        ] %>
<% end %>

<div class="mx-auto w-full max-w-3xl">
  <div class="mb-8">
    <h1 class="text-3xl font-semibold tracking-tight text-gray-900">Edit campaign</h1>
    <p class="mt-2 text-base text-gray-600">Update title and recipients.</p>
  </div>

  <div class="card p-6 sm:p-8">
    <%= render "form", campaign: @campaign %>
  </div>
</div>
