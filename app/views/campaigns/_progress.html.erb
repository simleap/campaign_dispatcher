<% status_counts = campaign.recipients.group(:status).count %>
<% total_recipients = status_counts.values.sum %>
<% sent_recipients = status_counts.fetch("sent", 0) %>
<% failed_recipients = status_counts.fetch("failed", 0) %>
<% queued_recipients = status_counts.fetch("queued", 0) %>
<% sent_percent = total_recipients.zero? ? 0 : ((sent_recipients.to_f / total_recipients) * 100).round %>

<%= turbo_frame_tag dom_id(campaign, :progress), class: "space-y-8" do %>
  <div class="flex flex-col justify-between gap-4 sm:flex-row sm:items-start">
    <div>
      <h1 class="text-3xl font-semibold tracking-tight text-gray-900"><%= campaign.title %></h1>
      <div class="mt-2 flex flex-wrap items-center gap-2 text-sm text-gray-600">
        <%= campaign_status_badge(campaign.status) %>

        <% if campaign.started_at.present? %>
          <span>Started <%= l(campaign.started_at, format: :short) %></span>
        <% end %>

        <% if campaign.completed_at.present? %>
          <span>Completed <%= l(campaign.completed_at, format: :short) %></span>
        <% end %>

        <% unless campaign.pending? %>
          <span>Editing disabled after dispatch.</span>
        <% end %>
      </div>
    </div>

    <div class="flex flex-col items-stretch gap-2 sm:items-end">
      <div class="flex flex-col gap-2 sm:flex-row sm:justify-end">
        <% if campaign.pending? %>
          <%= link_to "Edit",
                edit_campaign_path(campaign),
                class: "btn btn-md btn-secondary w-full sm:w-auto" %>
        <% else %>
          <span class="btn btn-md w-full select-none bg-white text-gray-400 shadow-sm ring-1 ring-inset ring-gray-200 sm:w-auto">
            Edit
          </span>
        <% end %>

        <%= button_to "Delete",
              campaign_path(campaign),
              method: :delete,
              form: { data: { turbo_confirm: "Delete this campaign?" } },
              class: "btn btn-md btn-danger w-full sm:w-auto" %>

        <%= button_to "Dispatch Campaign",
              dispatch_campaign_path(campaign),
              method: :post,
              disabled: !campaign.pending?,
              form: { class: "w-full sm:w-auto" },
              class: "btn btn-md btn-primary w-full sm:w-auto" %>
      </div>

      <% if campaign.processing? %>
        <span class="text-sm text-gray-600">Processingâ€¦</span>
      <% end %>
    </div>
  </div>

  <section aria-labelledby="progress-heading">
    <div class="card">
      <div class="card-body">
        <div class="flex items-center justify-between gap-4">
          <h2 id="progress-heading" class="text-base font-semibold text-gray-900">Progress</h2>
          <p class="text-sm text-gray-700">
            Sent <span class="font-medium"><%= sent_recipients %></span> of <span class="font-medium"><%= total_recipients %></span>
          </p>
        </div>

        <div class="mt-4">
          <div class="h-2 w-full overflow-hidden rounded-full bg-gray-100">
            <div class="h-full rounded-full bg-green-500" style="width: <%= sent_percent %>%;"></div>
          </div>
          <div class="mt-3 flex flex-wrap gap-x-6 gap-y-2 text-sm text-gray-700">
            <span>Queued: <span class="font-medium"><%= queued_recipients %></span></span>
            <span>Sent: <span class="font-medium"><%= sent_recipients %></span></span>
            <span>Failed: <span class="font-medium"><%= failed_recipients %></span></span>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
