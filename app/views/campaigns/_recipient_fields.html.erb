<div class="rounded-lg border border-gray-200 bg-white p-5 shadow-sm" data-nested-form-target="row">
  <%= f.hidden_field :_destroy %>

  <div class="grid grid-cols-1 gap-5 sm:grid-cols-3">
    <div>
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name,
            required: true,
            class: "form-input mt-2" %>
      <% if f.object.errors[:name].any? %>
        <p class="mt-1 text-sm text-red-600"><%= f.object.errors[:name].first %></p>
      <% end %>
    </div>

    <div>
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email,
            class: "form-input mt-2" %>
      <% if f.object.errors[:email].any? %>
        <p class="mt-1 text-sm text-red-600"><%= f.object.errors[:email].first %></p>
      <% end %>
    </div>

    <div>
      <%= f.label :phone_number, "Phone number", class: "form-label" %>
      <%= f.telephone_field :phone_number,
            class: "form-input mt-2" %>
      <% if f.object.errors[:phone_number].any? %>
        <p class="mt-1 text-sm text-red-600"><%= f.object.errors[:phone_number].first %></p>
      <% end %>
    </div>
  </div>

  <% if f.object.errors[:base].any? %>
    <p class="mt-2 text-sm text-red-600"><%= f.object.errors[:base].first %></p>
  <% end %>

  <div class="mt-4 flex items-center justify-end">
    <button
      type="button"
      data-action="nested-form#remove"
      class="text-sm font-medium text-gray-600 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
      Remove
    </button>
  </div>
</div>
